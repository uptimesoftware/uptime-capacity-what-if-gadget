<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="<%= pkg.title %>"
		description="<%= pkg.description %>"
		thumbnail="elementStatusThm.png">
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<gadget_version>
		<%= pkg.gadget_version %>
	</gadget_version>
	<grid_info>
		<supported_versions>
			7.3
		</supported_versions>
		<supported_platforms>
			windows,linux
		</supported_platforms>
		<requires_agent_scripts>
			false
		</requires_agent_scripts>
		<upgrade_in_place>
			true
		</upgrade_in_place>
	</grid_info>
	<Content type="html">
<![CDATA[ 

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		<title>Capacity Gadget</title>
		<link href="__UPTIME_GADGET_BASE__/uptimeCapacity.css" type="text/css" rel="stylesheet" />

		#includeResources(jquery,highcharts)
		
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/apiQueries.js?v=<%= pkg.gadget_version %>"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeCapacityGadget.js?v=<%= pkg.gadget_version %>"></script>
		<script type="text/javascript" id="ownScript" src="__UPTIME_GADGET_BASE__/uptimeCapacity.js?v=<%= pkg.gadget_version %>"></script>
		
	</head>



	<body>

		<div id="widgetSettings">

			<form id="widgetOptions">

				<div id="availableQueries">
					Query Type:
					<select id="QueryTypeSelector" class="query-type-setting">
						<option value="Mem">Memory</option>
						<option value="Cpu">Cpu</option>
						<option value="Datastore">Datastore</option>
					</select>
				</div>
				<div id="availableElements">
					Select Element:
					<select id="elementId" class="element-status-setting">
						<option value="-1">Loading...</option>
					</select>
				</div>
				<div id="MonthyTimeFrame">
					Based on how many months of data?:
					<select id="MonthSelector" class="time-frame-selector">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3" selected="selected">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
					</select>
				</div>
				<div id="CapacitySliderDiv">
					Capacity Buffer:
					<input type="range" name="capacityBuffer" id="capacitySlider" min="50" max="150"><div id="CurCapacityBuffer"></div>
				<br/>
				<div id="MetricType">
					Based on the daily what?:
					<br/>
					<input type="radio" checked id="avg" class="element-status-setting" name="metricType" value="avg"> Average
					<br/>
					<input type="radio" id="max" class="element-status-setting" name="metricType" value="max"> Max
					<br/>
					<input type="radio" id="min" class="element-status-setting" name="metricType" value="min"> Min
					<br/>
				</div>
			</br></br>
				<div id="WhatIfSettings">
					What If I add?
					<div id="vms">
						<div class="vm">
						Cpu:<input type="text" id="newCpu" class="what-if-setting Cpu" name="CpuUsage" value="0" size="4">
						Mem:<input type="text" id="newMem" class="what-if-setting Mem" name="MemUsage" value="0" size="4">
						X<input type="text" id="vmCount" class="what-if-setting Count" name="vmCount" value="1" size="4">
						</div>
						<div class="vm">
						Cpu:<input type="text" id="newCpu" class="what-if-setting Cpu" name="CpuUsage" value="0" size="4">
						Mem:<input type="text" id="newMem" class="what-if-setting Mem" name="MemUsage" value="0" size="4">
						X<input type="text" id="vmCount" class="what-if-setting Count" name="vmCount" value="1" size="4">
						</div>
					</div>
					<button type="button" id="addVm">+</button>
				</div>
				<button id="closeSettings">Close</button>
			</form>
		</div>

		<div id ="countDownTillDoomsDay"></div>
		<div id = "widgetChart"></div>
		<div id="statusBar"></div>


	</body>
</html>

]]>
	</Content>
</Module>